<div class="page-header">
  <h1>Classification of: <%= @image.split('/').last %></h1>
</div>
<div class="row results">
  <div class="col-md-8 left">
    <div class="row">
      <!-- Image -->
      <div class="col-md-6">
        <div class='thumbnail' >
          <%= image_tag (@image.split('/').last) %>
        </div>
      </div>
      <div class="results-body col-md-6">
        <h3>Results:</h3>
        <ol>
          <% @result.each_with_index do |r, i| %>
          <li><%= r %></li>
          <% end %>
        <ol>
      </div>
    </div>
    <div class="row">
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
          Processing Image...
        </div>
      </div>
    </div>

    <!-- Error Output -->
    <% if @errors %>
      <div class="alert alert-danger row" role="alert">
        <strong>Error Log:</strong><br/>
        <% @errors.each do |e| %>
          # <%= e %><br>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="col-md-4 right panel panel-default">
    <div class="panel-body">
      <h3>Images</h3>
      <ul class='list-unstyled'>
        <% Dir.glob(Rails.root.to_s + '/public/images/**/*').each do |image| %>
        <li>
          <% image_name = image.split('/').last %>
          <a href='/showcase/perform_calc?image_name=<%= image_name %>'>
            <%= image_name %>
          </a>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
